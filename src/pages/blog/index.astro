---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en" class="font-['Atkinson',sans-serif] m-0 p-0 text-left bg-gradient-to-b from-gray-100/50 to-white dark:from-gray-800/50 dark:to-gray-900 bg-no-repeat text-gray-700 dark:text-gray-300 text-xl leading-relaxed break-words">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="font-['Atkinson',sans-serif] m-0 p-0 text-left bg-gradient-to-b from-gray-100/50 to-white dark:from-gray-800/50 dark:to-gray-900 bg-no-repeat text-gray-700 dark:text-gray-300 text-xl leading-relaxed break-words">
		<Header />
		<main class="w-[960px] max-w-[calc(100%-2rem)] mx-auto py-12 px-4 max-sm:p-4 max-sm:text-lg">
			<section>
				<ul class="flex flex-wrap gap-8 list-none m-0 p-0 max-sm:gap-2">
					{
						posts.map((post, index) => (
							<li class="w-full text-center">
								<a href={`/blog/${post.id}/`} class="block no-underline transition-all duration-200 hover:text-blue-600 dark:hover:text-blue-400">
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" class={`mb-2 rounded-xl hover:shadow-lg transition-shadow duration-200 ${index === 0 ? 'w-full' : ''}`} />
									)}
									<h4 class="title m-0 text-gray-900 dark:text-gray-100 leading-none">{post.data.title}</h4>
									<p class="date m-0 text-gray-500 dark:text-gray-400">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
